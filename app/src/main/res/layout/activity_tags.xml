<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@id/title_fragment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <Button
        android:id="@+id/tags_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存" />

    <FrameLayout
        android:id="@+id/tags_frame_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.jarvis.tbaseview.widget.AjustPositionImageView
            android:id="@+id/tags_original_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />


        <com.jarvis.tbaseview.widget.TagsView
            android:id="@+id/tags_tags_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </FrameLayout>

</LinearLayout>