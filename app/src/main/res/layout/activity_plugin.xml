<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@id/title_fragment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
         >

        <ImageView
            android:id="@+id/plugin_main_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/meinv8" />
        
        
        <Button 
            android:id="@+id/plugin_change_btn"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="换肤"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/bluelight_circle_bg"
            />
        
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView 
            android:id="@+id/plugin_home_img"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/plugin_home"
            />
        <ImageView 
            android:id="@+id/plugin_person_img"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/plugin_person"
            />
        <ImageView 
            android:id="@+id/plugin_more_img"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/plugin_more"
            />
        
        
    </LinearLayout>

</LinearLayout>